<Window x:Class="Teste1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste1"
        mc:Ignorable="d"
        Title="Tela Principal" Height="450" Width="800" Background="#FFECECEC">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top" Background="#FFD3CBCB" >
            <Button x:Name="BtnUm" Content="Botão 1" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnUm_Click" Height="18"/>
            <Button x:Name="BtnDois" Content="Botão 2" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnDois_Click" Height="18"/>
            <Button x:Name="BtnTres" Content="Botão 3" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnTres_Click" Height="18"/>
            <Button x:Name="BtnQuatro" Content="Botão 4" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnQuatro_Click" Height="18"/>
        </Menu>

    </Grid>
</Window>
